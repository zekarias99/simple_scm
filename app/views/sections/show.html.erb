<% if !flash[:notice].blank? %>
	<div class="notice">
	  <%= flash[:notice] %>	
	</div>
<% end %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="section show">
	<h2>Show Section</h2>

	<table class="summary detail view">
		<tr>
			<th>Page ID</th>
			<td><%= @section.page_id %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @section.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Content Type</th>
			<td><%= @section.content_type %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td><%= @section.content %></td>
		</tr>
	</table>
</div>
